@model TestSEOAnalyser.Models.SeoAnalyserResultModel
<link href="@Url.Content("~/Content/jquery-ui.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery-ui.js")" type="text/javascript"></script>
    <h1>Result</h1>

    <h3>@Model.Error</h3>

    <div id="tabs">

        <ul>
            <li><a href="#tabs-1">Stop-Words</a></li>
            <li><a href="#tabs-2">Occurrences Of Each Word</a></li>
            <li><a href="#tabs-3">Occurrences Of Each Word In Meta Tags</a></li>
            <li><a href="#tabs-4">External Links</a></li>
        </ul>

        <div id="tabs-1">
            @if (Model.StopWords != null && Model.StopWords.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Word
                            </th>
                            <th>
                                Occurrences
                            </th>
                        </tr>
                    </thead>
                    @foreach (var item in Model.StopWords)
                    {
                        <tr class="table-bordered">
                            <td class="table-bordered">@item.Key</td>
                            <td class="table-bordered">@item.Value</td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <span>No items to display</span>
            }
        </div>

        <div id="tabs-2">
            @if (Model.Words != null && Model.Words.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Word
                            </th>
                            <th>
                                Occurrences
                            </th>
                        </tr>
                    </thead>
                    @foreach (var item in Model.Words)
                    {
                        <tr class="table-bordered">
                            <td class="table-bordered">@item.Key</td>
                            <td class="table-bordered">@item.Value</td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <span>No items to display</span>
            }
        </div>

        <div id="tabs-3">
            @if (Model.WordsInTag != null && Model.WordsInTag.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                Word
                            </th>
                            <th>
                                Occurrences
                            </th>
                        </tr>
                    </thead>
                    @foreach (var item in Model.WordsInTag)
                    {
                        <tr class="table-bordered">
                            <td class="table-bordered">@item.Key</td>
                            <td class="table-bordered">@item.Value</td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <span>No items to display</span>
            }
        </div>

        <div id="tabs-4">
            @if (Model.ExternalLinks != null && Model.ExternalLinks.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                External Link
                            </th>
                        </tr>
                    </thead>
                    @foreach (var item in Model.ExternalLinks)
                    {
                        <tr class="table-bordered">
                            <td class="table-bordered"><a href="@item"> @item</a></td>
                        </tr>
                    }
                </table>
                <span>Total Occurrences - @Model.ExternalLinks.Count</span>
            }
            else
            {
                <span>No items to display</span>
            }
        </div>

    </div>
    <script type="text/javascript">
        $(function () {
            $("#tabs").tabs();
            $('#tabs').tabs('select', 1);
        });
    </script>
